<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>
<p>
  <strong>On the station:</strong>
  <% if !@train.current_station.nil? %>
    <%= @train.current_station.title %>
  <% else %>
    None
  <% end %>
</p>
<p>
  <strong>Carriages:</strong>
  <% if @train.flag %>
    <% @train.carriages.each do |carriage|  %>
        <%= link_to "Carriage ##{carriage.number} ", admin_carriage_path(carriage) %>
      <% end %>
  <% else %>
    <% @train.carriages.desc.each do |carriage|  %>
      <%= link_to "Carriage ##{carriage.number} ", admin_carriage_path(carriage) %>
    <% end %>
  <% end %>
</p>
<%= @train.count_places('EconomyCarriage', 'down_places_amount') %>
<p>
  <strong>Following the route:</strong>
  <% if !@train.route.nil? %>
    <%= @train.route.name %>
  <% else %>
    None
  <% end %>
</p>

<p><%=link_to 'Add a carriage', new_admin_train_carriage_path(@train) %></p>

<%= link_to 'Edit', edit_admin_train_path(@train) %> |
<%= link_to 'Back', admin_trains_path %>
