<%= form_for @ticket do |form| %>

  <div class="field">
    <%= form.label :train_id %>
    <%= form.collection_select :train_id, @trains, :id, :number %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :surname %>
    <%= form.text_field :surname %>
  </div>
  <div class="field">
    <%= form.label :passport_id %>
    <%= form.text_field :passport_id %>
  </div>
  <%= form.submit 'Buy' %>

<% end %>
